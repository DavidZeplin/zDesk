<script>
var decodedUrl = decodeURIComponent(window.location.href);
function getPageInfo () {
  var _t = decodedUrl.split('/hc/');
  if (_t[1].indexOf("-") >= 0){
    _t = _t[1].split('/');
    if(_t[2] != null && _t[2].indexOf("-") >= 0){
      _t = _t[2].split('-');
      return {type:_t[1], id:_t[0]}
    }else{
      return {type:_t[1], id:_t[2]}
    }
  }else{
    _t = _t[1].split('/');
    if(_t[2] != null){
      return {type:_t[1], id:_t[2]}
    }
      return {type:null, id:null}
  }
}

function getLocale() {
  var lang =  decodedUrl.split('/hc/')[1].split('/')[0];
  if(lang.indexOf('?') >= 0){
    lang = lang.split('?');
    return lang[0];
  }else{
    return lang;
  }
}

